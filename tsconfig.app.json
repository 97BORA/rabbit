{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2020", // ES2020 기반 브라우저 지원
        "useDefineForClassFields": true, // 클래스 필드 초기화 시 `define` 사용
        "lib": ["ES2020", "DOM", "DOM.Iterable"], // DOM 및 ES2020 라이브러리
        "module": "ESNext", // ESM 지원
        "moduleResolution": "node", // Node.js 모듈 해석
        "skipLibCheck": true, // 타입 정의 파일 검사 생략
        "jsx": "react-jsx", // React 17+ JSX 변환 지원

        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,

        /* Alias 설정 */
        "baseUrl": ".", // 절대 경로의 기준 설정
        "paths": {
            "src/*": ["src/*"] // 'src'를 src 디렉터리에 매핑
        }
    },
    "include": ["src"] // 소스 코드 포함
}
